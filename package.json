{
  "private": true,
  "name": "weather-app",
  "version": "0.1.0",
  "scripts": {
    "build": "react-app-rewired build",
    "build-storybook": "build-storybook -s public",
    "eject": "react-scripts eject",
    "format": "prettier --write \"src/**/*\"",
    "lint": "eslint \"src/**/*\"",
    "lint:fix": "eslint --fix \"src/**/*\"",
    "prepare": "husky install",
    "reinstall-deps": "bash ./scripts/reinstall-deps.sh",
    "start": "react-app-rewired start",
    "storybook": "start-storybook -p 6006 -s public",
    "test": "NODE_ENV=test jest",
    "test:ci": "NODE_ENV=test jest --ci --coverage --forceExit",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:e2e": "npx cypress run --port 4000 --spec './cypress/integration/**/*.spec.*'",
    "test:watch": "NODE_ENV=test jest --watch",
    "typecheck": "tsc --noEmit -p . --pretty"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^7.0.0",
    "@testing-library/user-event": "^12.1.10",
    "customize-cra": "^1.0.0",
    "react": "^17.0.2",
    "react-app-rewire-alias": "^1.0.3",
    "react-dom": "^17.0.2",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^6.3.1",
    "@storybook/addon-actions": "^6.3.1",
    "@storybook/addon-docs": "^6.3.1",
    "@storybook/addon-essentials": "^6.3.1",
    "@storybook/addon-knobs": "^6.3.0",
    "@storybook/addon-links": "^6.3.1",
    "@storybook/cli": "^6.3.1",
    "@storybook/node-logger": "^6.3.1",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/react": "^6.3.1",
    "@types/jest": "^26.0.23",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "cypress": "^7.6.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "26.6.0",
    "jest-module-name-mapper": "^0.1.5",
    "jsdom": "^16.6.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "prettier-package-json": "^2.6.0",
    "react-app-rewired": "^2.1.8",
    "react-scripts": "4.0.3",
    "ts-jest": "26.4.1",
    "typescript": "^4.1.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test",
      "pre-commit": "lint-staged && npm test"
    }
  }
}
